<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
<body>
    <!--Header-->
    <main>
        <h1 id="title"></h1>
        <img id="poster" src= "" alt="">
       <div> <div id="genres"></div>
        <p id="summary"></p>
        <ul>
            <li id= "Rating"><strong>Ratings: </strong></li>
            <li id= "Date"><strong>Release Date: </strong></li>
           <li id= "Languages"><strong>Spoken Languages: </strong></li>
        </ul>
       </div>
       <div>
         <h2>Comments</h2>
         <form id="comment-form" method="POST" action="/movies/<%= movie_id %>">
           <label for="comment">Comment :</label>
           <input id="comment" type= "text" name="comment">
           <button type="submit">Send</button>
         </form>
         <div id="comments">
          <%# const commentLimit = comments.length > 10 ? 10 : comments.length %>
          <% for (let i = 0; i < comments.length; i++) { %>
            <div>
              <p><strong><%= comments[i].comment %></strong></p>
              <p><%= comments[i].created_at %></p>
            </div>
          <% } %> 
         </div>
       </div>
      
      
    </main>
    <!--Footer-->
    <script>const movie_id = <%= movie_id %></script>
    <script src="/js/singleMovie.js"></script>
</body>
</html>